<div class="text-center"><h1>Mister Cocktail's Recipes</h1>
  <div class="container">
    <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6 col-lg-4">
      <%= link_to cocktail_path(cocktail) do %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url( <%= cocktail.photo %> );">
            <div class="card-title"> <%= cocktail.name %> </div>
        </div>
        <% end  %>
      </div>
    <% end %>
    </div>
  </div>
</div>

